

<MudDrawer @bind-Open="@open" ClipMode="clipMode" Elevation="1" Variant="@DrawerVariant.Responsive" Anchor="Anchor.Right" PreserveOpenState=true Color="Color.Primary">
    <MudDrawerHeader>
        <MudText Typo="Typo.h6">My App</MudText>
    </MudDrawerHeader>
    <MudNavMenu Color="Color.Inherit">
        <MudNavLink Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Dashboard" IconColor="Color.Inherit">Store</MudNavLink>
        <MudNavLink Match="NavLinkMatch.All">Library</MudNavLink>
        <MudNavLink Match="NavLinkMatch.All">Community</MudNavLink>
    </MudNavMenu>
</MudDrawer>






@code {
    
    bool open = true;
    bool dense = true;
    DrawerClipMode clipMode = DrawerClipMode.Always;
    public void ToggleDrawer()
    {
        open = !open;
        Console.WriteLine(open);
        StateHasChanged();
    }
}
