<MudDialog IsVisible="true" Options="dialogOption">
    <DialogContent >
        <div style="width:300px">
            
            <MudText Class="mb-4 mt-2" Style="font-weight:bold; font-size:x-large"> @Title </MudText>
            <MudText Class="mb-4">@Message</MudText>
            <MudButton OnClick="@Yes" Variant="Variant.Filled" Class="ml-auto mr-n3 mb-1" Color="Color.Error">@YesButton</MudButton>
            <MudButton OnClick="@No" Class="ml-auto mr-2 mb-1" Color="Color.Error">@NoButton</MudButton>
        </div>
    </DialogContent>
</MudDialog>

@code {
    [CascadingParameter] 
    MudDialogInstance MudDialog { get; set; }
    [Parameter]
    public bool _isOpen { get; set; }
    [Parameter]
    public string Message { get; set; } = "";
    [Parameter]
    public string YesButton { get; set; } = "";
    [Parameter]
    public string NoButton { get; set; } = "";
    [Parameter]
    public string Title { get; set; } = "";
    DialogOptions dialogOption = new DialogOptions { NoHeader=true};

    async Task Yes()
    {
        MudDialog.Close(DialogResult.Ok(true));
    }
    async Task No()
    {
        MudDialog.Cancel();

    }

}
